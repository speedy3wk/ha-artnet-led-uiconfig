{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
